<Window x:Class="Lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab"
        mc:Ignorable="d"
        Title="MainWindow" Height="581" Width="936">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="#FF525252" Offset="0.988"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid HorizontalAlignment="Center" Width="900" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*">
            </RowDefinition>
            <RowDefinition Height="27*">

            </RowDefinition>
        </Grid.RowDefinitions>
        <Menu Margin="0,2,0,0">
               
            <MenuItem Header="Edit" Click="OpenEdit"></MenuItem>
                
            <MenuItem Header="Setting">
                <MenuItem Header="Setting Front"></MenuItem>     
                <MenuItem Header="Setting Conection" ></MenuItem>
            </MenuItem>
        </Menu>

        <Frame x:Name="frame" RenderTransformOrigin="1,0" Margin="0,5,0,10" Grid.Row="1" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
